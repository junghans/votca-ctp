<options>

<igwbse help="Projection method for excitonic couplings. Requires gwbse output" section="sec:dft">
		<package>gaussian_pair_bse.xml</package>
		<job><file>/data/isilon/baumeier/votca_devel/dcv2t_gw/ibse.jobs</file></job>
		<tasks>input,dft,parse,gwbse,coupling</tasks> <!--run-first principles; parse-extract orbitals; overlap-electronic couplings-->
		<store></store>

        <!-- GW-BSE options for running MBGFT -->
        <gwbse>
           <dftbasis>ubecppol</dftbasis>
           <gwbasis>gwdefault</gwbasis>
           <ranges></ranges> <!-- default: all levels in RPA, 1:2*HOMO in QP and BSE; other options: factor,explicit -->
		   <shift>0.3</shift> <!-- preshift of DFT energies in Rydberg -->
		   <tasks>singlets,triplets,ibse</tasks> <!-- default task is perturbative QP only, other options: qpdiag, singlets, triplets, all -->
		   <store></store>
           <exctotal>-100</exctotal>
           <print>10</print>
        </gwbse>

        <!--- options for calculation of coupling -->
        <type help="Spin types for couplings" default="singlets">all</type>
        <degeneracy help="Criterium for the degeneracy of two levels" unit="eV" default="0">0</degeneracy>
        <states help="Number of excitons considered" default="5">5</states>

    </igwbse>



</options>


